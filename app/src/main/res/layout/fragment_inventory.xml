<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".ui.dashboard.InventoryFragment">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/bottomExpandableMenuButtons"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="gone"
        app:constraint_referenced_ids="buttonDeleteAll,buttonDoneAll,buttonSearch,buttonSort,buttonMic"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonSearch"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="-4dp"
        android:layout_marginBottom="-4dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMenuExpandInventory"
        app:layout_constraintStart_toEndOf="@+id/buttonMenuExpandInventory">

        <ImageView
            android:id="@+id/buttonSearchIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/search_svgrepo_com"
            android:tint="@color/orange_main" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonDeleteAll"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@color/white_items"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@id/buttonMenuExpandInventory"
        app:layout_constraintEnd_toStartOf="@id/buttonMenuExpandInventory"
        app:layout_constraintTop_toTopOf="@id/buttonMenuExpandInventory">

        <ImageView
            android:id="@+id/buttonDeleteAllIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/delete"
            android:tint="#FD6A6A" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonDoneAll"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="14dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@id/buttonMenuExpandInventory"
        app:layout_constraintStart_toEndOf="@id/buttonMenuExpandInventory"
        app:layout_constraintTop_toTopOf="@id/buttonMenuExpandInventory">

        <ImageView
            android:id="@+id/buttonDoneAllIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/tick_circle_svgrepo_com"
            android:tint="@color/light_green_start" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonMic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/orange_main"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMenuExpandInventory"
        app:layout_constraintEnd_toEndOf="@id/buttonMenuExpandInventory"
        app:layout_constraintStart_toStartOf="@id/buttonMenuExpandInventory">

        <ImageView
            android:id="@+id/buttonMicIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/microphone"
            android:tint="@color/white_items" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonSort"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-4dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMenuExpandInventory"
        app:layout_constraintEnd_toStartOf="@+id/buttonMenuExpandInventory">

        <ImageView
            android:id="@+id/buttonSortIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/sort_svgrepo_com"
            android:tint="@color/orange_main" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonMenuExpandInventory"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="75dp"
        android:backgroundTint="@color/orange_main"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:src="@drawable/menu_navigation_grid_1529_svgrepo_com"
            android:tint="@color/white_items" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inventoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNewItemInventory" />

    <include
        android:id="@+id/emptyStateView"
        layout="@layout/empty_inventory"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonItemDetails"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@id/buttonAddItem"
        app:layout_constraintTop_toBottomOf="@id/topActionBarInventory">

        <ImageView
            android:id="@+id/buttonItemDetailsIcon"
            android:layout_width="25dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:src="@drawable/details_backup_svgrepo_com"
            app:tint="@color/orange_main" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonAddItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topActionBarInventory">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_svgrepo_com"
            app:tint="@color/orange_main" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topActionBarInventory">

        <androidx.cardview.widget.CardView
            android:id="@+id/expandableCardInputs"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/white_items"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white_items"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/remainingQuantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/albert_sans"
                    android:text="Remaining"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/quantityEditCard" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/setStoreCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/setCategoryCard"
                    app:layout_constraintStart_toEndOf="@id/setImageCard"
                    app:layout_constraintTop_toTopOf="@id/setImageCard">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/setStoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="Set Expiry"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/setStoreIcon" />

                        <ImageView
                            android:id="@+id/setStoreIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:src="@drawable/expired_svgrepo_com"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/setCategoryCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/setImageCard">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/setCategoryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="Set Category"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/setCategoryIcon" />

                        <ImageView
                            android:id="@+id/setCategoryIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:src="@drawable/organic_nutrition_svgrepo_com"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/setImageCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/costEditCard">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="Set Image"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imageView5" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:src="@drawable/camera_take_pictures_svgrepo_com"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <RadioGroup
                    android:id="@+id/priorityRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/quantityRadioGroup"
                    app:layout_constraintTop_toTopOf="@id/prioritySlider">

                    <RadioButton
                        android:id="@+id/fillRadioPriority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Fill" />

                    <RadioButton
                        android:id="@+id/autoRadioPriority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Auto" />
                </RadioGroup>

                <androidx.cardview.widget.CardView
                    android:id="@+id/quantityUnitEditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="75dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintStart_toEndOf="@id/quantityEditCard"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/quantityUnitEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="4"
                        android:hint="Unit "
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColorHint="@color/hint_text" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/quantityEditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="75dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">>

                    <EditText
                        android:id="@+id/quantityEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="7"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColorHint="@color/hint_text" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/priorityText"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="215dp"
                    android:fontFamily="@font/albert_sans_bold"
                    android:text="Priority"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/costUnitEditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintStart_toEndOf="@id/costEditCard"
                    app:layout_constraintTop_toTopOf="@id/costEditCard">

                    <EditText
                        android:id="@+id/costUnitEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="4"
                        android:hint="Currency"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColorHint="@color/hint_text" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.slider.Slider
                    android:id="@+id/remaningQuantitySlider"
                    style="@style/Widget.MaterialComponents.Slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-13dp"
                    android:layout_marginEnd="130dp"
                    android:stepSize="10"
                    android:value="100"
                    android:valueFrom="0"
                    android:valueTo="100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/remainingQuantityText"
                    app:layout_constraintTop_toTopOf="@id/remainingQuantityText" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/prioritySlider"
                    style="@style/Widget.MaterialComponents.Slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="130dp"
                    android:stepSize="1"
                    android:value="5"
                    android:valueFrom="1"
                    android:valueTo="10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/priorityCard"
                    app:layout_constraintTop_toBottomOf="@id/priorityText" />

                <RadioGroup
                    android:id="@+id/quantityRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/quantityUnitEditCard"
                    app:layout_constraintTop_toTopOf="@id/quantityUnitEditCard">

                    <RadioButton
                        android:id="@+id/fillRadioQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Fill" />

                    <RadioButton
                        android:id="@+id/autoRadioQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Auto" />
                </RadioGroup>

                <androidx.cardview.widget.CardView
                    android:id="@+id/priorityCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/priorityText">>

                    <EditText
                        android:id="@+id/priorityEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="5"
                        android:hint="Priority"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColorHint="@color/hint_text" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/costEditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/costText">>

                    <EditText
                        android:id="@+id/costEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="7"
                        android:hint="Cost"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColorHint="@color/hint_text" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tagCard"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/orange_main"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tagsText">

                    <TextView
                        android:id="@+id/tagsCardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vegan"
                        android:textColor="@color/white_items" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/albert_sans_bold"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/costText"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/albert_sans_bold"
                    android:text="Cost"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priorityCard" />

                <TextView
                    android:id="@+id/tagsText"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="150dp"
                    android:fontFamily="@font/albert_sans_bold"
                    android:text="Tags"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editTextNewItemInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/albert_sans"
        android:hint="I currently have...."
        android:textColorHint="@color/hint_text"
        app:layout_constraintEnd_toStartOf="@id/buttonItemDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topActionBarInventory" />

    <androidx.cardview.widget.CardView
        android:id="@+id/topActionBarInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sideButtonTopBar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white_items" />

            <ImageView
                android:id="@+id/accountButtonTopBar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/user_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white_items" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="91dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="14dp"
                android:text="Inventory"
                android:textColor="@color/white_items"
