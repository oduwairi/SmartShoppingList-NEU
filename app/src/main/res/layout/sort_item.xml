<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/sortedItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/sortItemBottomLine"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sortedItemIcon"
                app:layout_constraintTop_toBottomOf="@id/sortedItemIcon" />

            <ImageView
                android:id="@+id/dragAndSortButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/content_view_grid_icon" />

            <TextView
                android:id="@+id/sortedItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/albert_sans_bold"
                android:text="Beauty and Cosmetics"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@id/sortedItemIcon"
                app:layout_constraintStart_toEndOf="@id/sortedItemIcon"
                app:layout_constraintTop_toTopOf="@id/sortedItemIcon" />

            <ImageView
                android:id="@+id/sortedItemIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="@id/sortNumberText"
                app:layout_constraintStart_toEndOf="@id/sortNumberText"
                app:layout_constraintTop_toTopOf="@id/sortNumberText"
                app:srcCompat="@drawable/beauty_and_cosmetics" />

            <TextView
                android:id="@+id/sortNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/albert_sans_bold"
                android:text="1"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>