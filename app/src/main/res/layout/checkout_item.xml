<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/checkoutItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/checkoutItemNumCardOutline"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_marginStart="-1dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="-1dp"
                app:cardBackgroundColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/checkoutItemNumCard"
                app:layout_constraintEnd_toEndOf="@id/checkoutItemNumCard"
                app:layout_constraintStart_toStartOf="@id/checkoutItemNumCard"
                app:layout_constraintTop_toTopOf="@id/checkoutItemNumCard" />

            <androidx.cardview.widget.CardView
                android:id="@+id/checkoutItemNumCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/checkoutItemQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/electrolize"
                    android:padding="4dp"
                    android:text="1"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/electrolize"
                android:text="140 â‚º "
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/checkoutItemNumCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/checkoutItemNumCard" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/albert_sans_bold"
                android:text="Cupcake"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/checkoutItemIcon"
                app:layout_constraintStart_toEndOf="@id/checkoutItemIcon"
                app:layout_constraintTop_toTopOf="@id/checkoutItemIcon" />

            <ImageView
                android:id="@+id/checkoutItemIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baking_supplies" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>